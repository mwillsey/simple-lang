pub Pattern: RcPattern = {
    "_" => Pattern::Wildcard.into(),
    Name => Pattern::Binder(<>).into(),
    Literal => Pattern::Literal(<>).into(),
    Tuple<Pattern> => Pattern::Tuple(<>).into(),
}

pub Stmt: Stmt = {
    "let" <pat:Pattern> "=" <expr:Expr> ";" => Stmt::Let {<>},
    // <Decl> => Stmt::Decl(<>),
}

