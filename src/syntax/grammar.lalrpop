pub Block: Block = {
    "{" <stmts:Stmt*> <expr:Expr?> "}" => {
        let expr = match expr {
            Some(e) => e,
            None => Expr::Tuple(vec![]).into()
        };
        Block {stmts, expr}
    }
}
